<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- Set the background for this Linearlayout -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/social_post_ui_box"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:weightSum="1.0" >

            <RelativeLayout
                android:id="@+id/source1_container"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:background="@color/app_page_background_color"
                android:padding="1dp" >

               <FrameLayout
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_centerHorizontal="true" >

                    <ImageView
                        android:id="@+id/source1_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/nps_10" />

                    <TextView
                        android:id="@+id/source1_tick_icon"
                        android:layout_width="@dimen/dashboard_red_badge_width"
                        android:layout_height="@dimen/dashboard_red_badge_height"
                        android:layout_gravity="bottom|right"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/badge_circle_green"
                        android:text="&#x2713;"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:visibility="gone" />
                </FrameLayout>
            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="1dp"
                android:background="@color/line_border"
                tools:ignore="PxUsage" />

            <RelativeLayout
                android:id="@+id/source2_container"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:background="@color/app_page_background_color"
                android:padding="1dp" >

                <FrameLayout
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_centerHorizontal="true" >

                    <ImageView
                        android:id="@+id/source2_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/nps_2" />

                    <TextView
                        android:id="@+id/source2_tick_icon"
                        android:layout_width="@dimen/dashboard_red_badge_width"
                        android:layout_height="@dimen/dashboard_red_badge_height"
                        android:layout_gravity="bottom|right"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/badge_circle_green"
                        android:text="&#x2713;"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:visibility="gone"/>
                </FrameLayout>
            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="1dp"
                android:background="@color/line_border"
                tools:ignore="PxUsage" />

            <RelativeLayout
                android:id="@+id/source3_container"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.34"
                android:background="@color/app_page_background_color"
                android:padding="1dp" >

                <FrameLayout
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_centerHorizontal="true" >

                    <ImageView
                        android:id="@+id/source3_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/nps_3" />

                    <TextView
                        android:id="@+id/source3_tick_icon"
                        android:layout_width="@dimen/dashboard_red_badge_width"
                        android:layout_height="@dimen/dashboard_red_badge_height"
                        android:layout_gravity="bottom|right"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/badge_circle_green"
                        android:text="&#x2713;"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:visibility="gone" />
                </FrameLayout>
            </RelativeLayout>
        </LinearLayout>

        <!-- Set the background for this relativelayout -->

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/social_post_ui_box" >

            <EditText
                android:id="@+id/postingEditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:hint="Message"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <!-- Set the height of the imagview programatically -->

            <ImageView
                android:id="@+id/image"
                android:layout_width="fill_parent"
                android:layout_height="280dp"
                android:layout_below="@+id/postingEditText"
                android:adjustViewBounds="true"
                android:padding="10dp" />

            <TextView
                android:id="@+id/removeImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image"
                android:padding="10dp"
                android:text="Remove Image"
                android:textColor="@color/link_text_color"
                android:visibility="invisible" />

            <RelativeLayout
                android:id="@+id/camera_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_border"
                    tools:ignore="PxUsage" />

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_centerInParent="true"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/nps_3" />
            </RelativeLayout>
        </RelativeLayout>

        <!-- Set the background clickable -->

        <RelativeLayout
            android:id="@+id/location_selector_cell"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/social_post_ui_box"
            android:visibility="visible" >

            <TextView
                android:id="@+id/selectedLocationsText"
                style="@style/SettingsCellTextLeft"
                android:paddingLeft="10dp"
                android:text="Select Locations" />

            <TextView
                style="@style/SettingsCellTextRight"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/ic_arrow_right_gray"
                android:paddingRight="10dp"
                android:paddingTop="15dp" />
        </RelativeLayout>

        <!-- Set button background drawable -->

        <Button
            android:id="@+id/shareButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/primary_button"
            android:text="Share"
            android:textSize="15sp" />
    </LinearLayout>

</ScrollView>